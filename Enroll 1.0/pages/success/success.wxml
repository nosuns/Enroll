<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="success" size="93"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">报名成功</view>
            <view class="weui-msg__desc">你已成功报名本次聚会，记得准时参加哦</view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <navigator url="../info/info?campaignId={{campaignId}}" open-type="navigateBack" delta="1">
                    <button class="weui-btn" type="primary">确 认</button>
                </navigator>
            </view>
        </view>
        <view class="weui-msg__extra-area">
            <view class="weui-footer">            
                <button plain open-type="contact" style="line-height:28rpx; font-size:24rpx; color: #999999; border-color: #EFEFF4;">{{copyright}}</button>  
                <button plain open-type="contact" style="line-height:28rpx; font-size:24rpx; color: #586C94; border-color: #EFEFF4;">{{email}}</button>    
                <!--<view class="weui-footer__text">{{copyright}}</view>                
                <view class="weui-footer__link">{{email}}</view>-->
            </view>
        </view>
    </view>
</view>