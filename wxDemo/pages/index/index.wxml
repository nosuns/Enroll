<view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for-items="{{tabs}}" wx:key="{{index}}">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                    <view class="weui-cells weui-cells_after-title">
                        <!--<block wx:for="{{enrollList}}" wx:for-item="enroll" wx:key="objectId">-->
                        <view class="weui-cell weui-cell_access">
                            <view class="weui-cell__bd">
                                <view class="weui-badge_green" style="margin-right: 5px;">发起人</view><view style="display: inline-block; vertical-align: middle;">自驾游第13期</view>
                                
                                <view style="font-size: 13px;color: #888888;">开始时间：2016年8月18日(星期四) 09:00</view>
                                <view style="font-size: 13px;color: #888888;">结束时间：2016年8月18日(星期四) 19:00</view>
                            </view>
                            <view class="weui-cell__ft" style="color:#000">13人</view>
                        </view>      
                        <!--</block>-->
                    </view>
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>
            </view>
        </view>
    </view>
</view>
<view class="weui-footer-btn">
    <view class="weui-footer_fixed-bottom">
        <view class="weui-btn-area">
            <navigator url="../create/create">
              <button class="weui-btn" type="primary">发起聚会</button>
            </navigator>
        </view>
    </view>
</view>
